<UserControl x:Class="XadrezUI.FimDeJogoMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XadrezUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Width="275" 
            Height="125"
            Style="{StaticResource EstiloBorda}">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.ColumnSpan="2"
                       x:Name="TextoVencedor"
                       Text="VENCEDOR PLACEHOLDER"
                       Style="{StaticResource EstiloTexto}"
                       FontSize="15"/>

            <TextBlock Grid.Row="1"
                       Grid.ColumnSpan="2"
                       x:Name="TextoMotivo"
                       Text="MOTIVO PLACEHOLDER"
                       Style="{StaticResource EstiloTexto}"
                       FontSize="12"/>

            <Button Grid.Row="2"
                    Content="REINICIAR"
                    Style="{StaticResource EstiloBotao}"
                    Width="80"
                    Height="30"
                    Click="Reiniciar_Click"/>

            <Button Grid.Row="2"
                    Grid.Column="1"
                    Content="SAIR"
                    Style="{StaticResource EstiloBotao}"
                    Width="80"
                    Height="30"
                    Click="Sair_Click"/>

        </Grid>

    </Border>
</UserControl>
